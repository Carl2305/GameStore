<!DOCTYPE html>
<html lang="es-pe">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title - MimeStore</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .body-content {
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top" id="NavBarMenu">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="~/Home">
                <img src="~/Content/images/Logotipo_Tienda_GameStore.jpg" width="70" height="50">
            </a>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="~/Home">GameStore</a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="dropdown">
                        <a href="#" class="btn btn-default dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
                                <path d="M2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2zm3.5 4a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                                <path d="M1.293 7.793A1 1 0 0 1 1 7.086V2a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l.043-.043-7.457-7.457z" />
                            </svg> PRODUCTOS
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item btn-Categorie" href="~/Products/Products?ctg=C01">XBOX</a><span class="sr-only">(XBOX)</span></li>
                            <li><a class="dropdown-item btn-Categorie" href="~/Products/Products?ctg=C02">PLAYSTATION</a><span class="sr-only">(PLAYSTATION)</span></li>
                            <li><a class="dropdown-item btn-Categorie" href="~/Products/Products?ctg=C03">NINTENDO</a><span class="sr-only">(NINTENDO)</span></li>
                            <li><a class="dropdown-item btn-Categorie" href="~/Products/Products?ctg=C04">PC</a><span class="sr-only">(PC)</span></li>
                        </ul>
                    </li>
                    @if (Session["Prop_Usua"]==null)
                    {
                        <li class="nav-item active" id="btns-LogNav">
                            <a class="nav-link" id="btn-login_menup" style="cursor: pointer;">
                                Inicia Sesión
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                </svg>
                                <span class="sr-only">(Inicia Sesión)</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown" id="btns-LogNav">
                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                                </svg> @Session["Nombre_Cliente"].ToString()
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="@Url.Action("MyProfile","Clients")">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-file-person-fill" viewBox="0 0 16 16">
                                        <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm-1 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm-3 4c2.623 0 4.146.826 5 1.755V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-1.245C3.854 11.825 5.377 11 8 11z" />
                                    </svg> Mi Perfil
                                    <span class="sr-only">(Mi Perfil)</span>
                                </a>
                                <a class="dropdown-item" href="@Url.Action("Logout","Home")">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                                        <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                                    </svg> Cerrar Sesión
                                    <span class="sr-only">(Cerrar Sesión)</span>
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            @using (Html.BeginForm("Products", "Products",FormMethod.Post))
            {
                <div id="btnsbarCopy">
                    <div class="form-search content-search navbar-form">
                        <div class="input-group">
                            <input placeholder="Buscar..." class="form-control form-text" type="text" size="15" maxlength="128" id="barSearch" name="q" />
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary mt-1" id="btn-Search">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            }
            <a href="@Url.Action("FinallySale", "Sales")" class="btn btn-warning ml-3 p-2" id="btn-CarCompra" style="border-radius: 50px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="30" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <span class="badge badge-light align-middle" id="objCarrito" style="background: red; color: white; font-size: 15pt; border-radius: 50px;">@ViewBag.NUMBER_ITEMS</span>
            </a>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    <br>
    <br>
    <footer class="footer bg-dark text-center">
        <span class="text-white">
            Copyright &#169; GameStore. Todos los
            desrechos Reservados.
        </span>
    </footer>

    <div class="modal" id="modal_Login" tabindex="-1" role="dialog" aria-labelledby="modal_Login">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body" style="vertical-align: central; text-align: center;">
                    <form autocomplete="off" id="frm-Login" role="form">
                        <img class="mb-4" src="~/Content/images/Logotipo_Tienda_GameStore.jpg" alt="" style="width: 200px; height: 150px;">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h1 class="h3 mb-3 font-weight-normal">Bienvenido, gracias por volver</h1>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <label for="inputEmail">Correo electrónico</label>
                            <input type="email" name="email" class="form-control" placeholder="Ingresar correo" required="" autofocus="" id="email">
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <label for="inputPassword">Contraseña</label>
                            <input type="password" name="clave" class="form-control" placeholder="Ingresar contraseña" required="" id="password">
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <hr>
                            <button class="btn btn-lg btn-primary btn-block" type="button" id="btn-Login">Iniciar sesión</button>
                            <a class="btn btn-lg btn-primary btn-block" href="@Url.Action("RegisterClient","Clients")">Registrarme</a>
                        </div>
                    </form>
                    <p class="mt-5 mb-3 text-muted">© 2021 GameStore</p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/SweetAlert.js"></script>
    <script src="~/Scripts/getData.js"></script>
    <script src="~/Scripts/app.js"></script>
</body>
</html>
