
@{
    ViewBag.Title = "MyProfile";
}

<div class="row mt-5">
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3 mt-md-5">
        <center><button class="btn btn-warning" id="btn_edit_Client">Actualizar Datos</button></center>
    </div>
    <div class="col-12 col-sm-8 col-md-8 col-lg-9">
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="nomb_client">Nombre</label>
                <input class="form-control" type="text" name="nomb_client" id="nomb_client" placeholder="Nombres" />
            </div>
            <div class="col-12 col-md-6">
                <label for="ape_client">Apellidos</label>
                <input class="form-control" type="text" name="ape_client" id="ape_client" placeholder="Apellidos" />
            </div>
            <div class="col-12 col-md-6">
                <label for="telf_client">Teléfono</label>
                <input class="form-control" type="text" name="telf_client" id="telf_client" placeholder="Teléfono" />
            </div>
            <div class="col-12 col-md-6">
                <label for="doc_ident_client">Doc. Identidad</label>
                <input class="form-control" type="text" name="doc_ident_client" id="doc_ident_client" placeholder="Doc. Identidad" />
            </div>
            <div class="col-12 col-md-6">
                <label for="distrito_client">Distrito de Residencia</label>
                <input class="form-control" type="text" name="distrito_client" id="distrito_client" placeholder="Distrito" />
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <label for="direcc_client">Dirección</label>
                <input class="form-control" type="text" name="direcc_client" id="direcc_client" placeholder="Dirección" />
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <label for="email_client">Correo Electrónico</label>
                <input class="form-control" type="text" name="email_client" id="email_client" placeholder="Correo Electrónico" />
            </div>
        </div>
    </div>
</div>
